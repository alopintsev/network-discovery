    <!-- Define persistence unit -->
    <persistence-unit name="my-persistence-unit">
        <description>itinform database</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <!-- database connection -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://___________" />
            <property name="javax.persistence.jdbc.user" value="__________" />
            <property name="javax.persistence.jdbc.password" value="__________" />
            <!--
            <property name="hibernate.show_sql" value="true"/>
            -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect"/>
        </properties>
    </persistence-unit>
</persistence>